{
  "compilerOptions": {
   // Default
   "target": "es5",
   "esModuleInterop": true,
   "forceConsistentCasingInFileNames": true,
   "strict": true,
   "skipLibCheck": true,

   // Added
   "jsx": "react-jsx",
   "module": "ESNext",
   "declaration": true,
   "declarationDir": "types",
   "sourceMap": true,
